#%RAML 1.0
---
title: test x-www-form-urlencoded API

/url-encoded-simple:
  post:
    body:
      application/x-www-form-urlencoded:
        properties:
          first:
            type: string
    responses:
      201: ~

/url-encoded-simple-integer:
  post:
    body:
      application/x-www-form-urlencoded:
        properties:
          first:
            type: integer
    responses:
      201: ~

/url-encoded-with-default:
  post:
    body:
      application/x-www-form-urlencoded:
        properties:
          first:
            type: string
            default: primo
            required: false
          second:
            type: string
          third:
            type: boolean
            required: true
    responses:
      201: ~

/url-encoded-duplicated-key:
  post:
    body:
      application/x-www-form-urlencoded:
        properties:
          first:
            type: string
            required: false
            default: primo
          second:
            type: string
            required: true
          third:
            type: boolean
            required: true
    responses:
      201: ~

/url-encoded-with-arrays:
  post:
    body:
      application/x-www-form-urlencoded:
        properties:
          first:
            type: string[]
          second:
            type: integer[]
          third:
            type: string
    responses:
      201: ~