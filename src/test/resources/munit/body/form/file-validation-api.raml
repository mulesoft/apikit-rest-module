#%RAML 1.0
title: fileTypeTest

/documents:
  post:
    body:
      multipart/form-data:
        properties:
          first:
            type: file
            fileTypes: 'image/jpeg'
            minLength: 8
            maxLength: 5000
/small-documents:
  post:
     body:
       multipart/form-data:
         properties:
            first:
             type: file
             fileTypes: ['image/jpeg','image/png']
             minLength: 0
             maxLength: 8

/anyFileTypeAllowed:
  post:
     body:
       multipart/form-data:
         properties:
            first:
             type: file
             fileTypes: ['*/*']